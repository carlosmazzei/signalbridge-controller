{
    "name": "Raspberry Pi Pico FreeRTOS Development",
    "build": {
        "dockerfile": "Dockerfile"
    },
    
    "features": {
        "ghcr.io/devcontainers/features/git:1": {},
        "ghcr.io/devcontainers/features/python:1": {
            "version": "3.11"
        }
    },

    "initializeCommand": [
        "git",
        "submodule",
        "update",
        "--init",
        "--recursive"
    ],

    "postCreateCommand": [
        "bash",
        "-c", 
        "chmod +x .devcontainer/post-create.sh && .devcontainer/post-create.sh"
    ],

    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-extension-pack",
                "ms-vscode.cmake-tools",
                "twxs.cmake",
                "ms-python.python",
                "GitHub.copilot",
                "ms-vscode.hexeditor",
                "marus25.cortex-debug",
                "dan-c-underwood.arm",
                "ms-vscode.vscode-serial-monitor",
                "jeff-hykin.better-cpp-syntax",
                "cschlosser.doxdocgen",
                "zachflower.uncrustify",
                "SonarSource.sonarlint-vscode"
            ]
        }
    },

    "containerEnv": {
        "PICO_SDK_PATH": "${containerWorkspaceFolder}/lib/pico-sdk",
        "FREERTOS_KERNEL_PATH": "${containerWorkspaceFolder}/lib/FreeRTOS-Kernel",
        "PICO_TOOLCHAIN_PATH": "/usr/bin"
    },

    "mounts": [
        "source=/dev,target=/dev,type=bind,consistency=cached"
    ],

    "privileged": true,

    "forwardPorts": [],

    "portsAttributes": {},

    "remoteUser": "vscode"
}